#: import an some.AnchorLayout1

<MyWidget>:
    Screen:
        name: 'welcome'
        AnchorLayout1:
            anchor_x: 'center'
            anchor_y: 'center'
            BoxLayout:
                orientation: 'vertical'
                size_hint: [.7, .9]
                padding: 10
                spacing: 5
                Button:
                    background_color: [.20, .28, 1, 1]
                    background_normal: ''
                    text: 'Login'
                    on_press: root.on_pr()
                Button:
                    text: 'Join'
                    on_press: root.current = 'login'

    Screen:
        name: 'login'
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            GridLayout:
                spacing: 9
                size_hint: [.9, .3]
                rows: 3
                cols: 2
                Label:
                    text: 'Name'
                TextInput:
                    id: name
                Label:
                    text: 'Password'


                TextInput:
                    password: True
                Button:
                    id: 'ok'
                    text: 'Ok'
                    on_press: root.ok_p()

                Button:
                    id: 'con'
                    text: 'cancel'


